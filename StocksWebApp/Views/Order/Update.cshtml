@using StocksWebApp.ViewModels;
@model OrderViewModel

<br />
<form asp-action="Update" asp-controller="Order" asp-route-id="@Model.ID">
    <div class="form-group">
        <label asp-for="Shares"></label>
        <input class="form-group" asp-for="Shares">
    </div>
    <div class="form-group">
        <label asp-for="Limit"></label>
        <input class="form-group" asp-for="Limit">
    </div>

    <button class="btn btn-primary" type="submit">Update Order</button>
</form>